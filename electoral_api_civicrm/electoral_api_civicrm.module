/**
 * Implements hook_cron().
 *
 * @ingroup hooks
 */
function electoral_api_civicrm_cron() {

  // Only run under low server load.
  if (function_exists('sys_getloadavg')) {
    list($load) = sys_getloadavg();
    // TODO This variable was probably removed in Backdrop without replacement.
    $limit = variable_get('electoral_api_cron_load_limit', 6);
    if (is_numeric($load) && !empty($limit) && $load > $limit) {
      watchdog('electoral_api_civicrm', 'System load is higher than @limit, electoral_api_civicrm_cron will not be run.',
        array('@limit' => $limit), WATCHDOG_WARNING);
      return;
    }
  }

  // Test connection.
  if (!_electoral_api_connection_test()) {
    watchdog('electoral_api_civicrm', 'A connection cannot be made to Sunlight, ' .
      'electoral_api_civicrm_cron will not be run.', array(), WATCHDOG_ERROR);
    return;
  }

  // Make sure that we won't hit MySQL connection timeouts.
  _electoral_api_mysql_wait_timeout();

  // Process the queue.
  _electoral_api_civicrm_process_queue();
}

