/**
 * Get the CD of the given contact from the database.
 *
 * @param int $contact_id
 * @param boolean $reset
 *  Resets the static cache.
 *
 * @return string
 *  ex. 'NY17' or NULL if not set/error.
 */
function electoral_api_civicrm_contact_get_cd($contact_id, $reset = FALSE) {
  static $contacts = array();

  if ($reset) {
    $contacts = array();
    return;
  }

  if (!isset($contacts[$contact_id])) {

    // Find the contact.
    // The CiviCRM API is totally not performant.
    // A manual query will be just as easy and far faster.
    $query = db_select(electoral_api_civicrm_CUSTOM_TABLE, 'c');
    $query->addField('c', electoral_api_civicrm_CUSTOM_FIELD_CD, electoral_api_civicrm_CD);
    $query->addField('c', electoral_api_civicrm_CUSTOM_FIELD_CD_OVERRIDE, electoral_api_civicrm_CD_OVERRIDE);
    $contact = $query->condition('entity_id', $contact_id)
      ->execute()
      ->fetchAssoc();
    if (!empty($contact[electoral_api_civicrm_CD_OVERRIDE])) {
      $contacts[$contact_id] = $contact[electoral_api_civicrm_CD_OVERRIDE];
    }
    elseif (!empty($contact[electoral_api_civicrm_CD])) {
      $contacts[$contact_id] = $contact[electoral_api_civicrm_CD];
    }
    else {
      $contacts[$contact_id] = NULL;
    }
  }
  return $contacts[$contact_id];
}

/**
